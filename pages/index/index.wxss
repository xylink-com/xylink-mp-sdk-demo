.title {
  font-size: 36rpx;
  margin-bottom: 15rpx;
}
.version {
  font-size: 12PX;
  text-align: center;
  color: rgba(0, 0, 0, 0.6);
  margin-bottom: 25rpx;
}
.setting {
  font-size: 16px;
  color: #3876ff;
}

.form {
  margin: 25rpx 0;
  width: 80vw;
}
.form-group {
  margin: 25rpx auto;
  width: 80vw;
}
.form-input {
  border: 1px solid #ddd;
  font-size: 15px;
  padding: 0 10rpx;
  height: 80rpx;
}
.form-checkbox {
  display: inline-block;
  margin: 10px 20px 10px 0;
  color: rgba(0, 0, 0, 0.8);
  font-size: 14px;
}

.line {
  margin: 40px 0;
  width: 100%;
  height: 1px;
  background-color: #ddd;
}
