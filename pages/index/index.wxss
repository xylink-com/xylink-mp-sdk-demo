.container {
  padding: 60rpx;
  width: 100%;
}

.setting {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  margin-top: 54rpx;
  padding-right: 60rpx;
  color: rgba(57, 57, 70, 0.9);
  font-size: 15px;
  line-height: 18px;
  box-sizing: border-box;
}

.logout{
  color: #FF5252;
  margin-right: 60rpx;
}

.title {
  width: 100%;
  font-weight: 500;
  color: #393946;
  font-size: 22px;
  margin-top: 36rpx;
  margin-bottom: 128rpx;
}

.btn {
  width: 100%;
  background: linear-gradient(90deg, #69AEFF 0%, #3876FF 100%);
  border-radius: 26px;
  opacity: 0.3;
  font-size: 16px;
  height: 48PX;
  text-align: center;
  line-height: 48px;
  color: #FFFFFF;
}

.btn_primary {
  opacity: 1;
}

.form {
  width: 100%;
}

.form-group {
  position: relative;
  width: 100%;
}

.form-input {
  font-weight: 400;
  color: rgba(57, 57, 70, 0.9);
  margin-bottom: 36rpx;
  font-size: 15px;
}

.line {
  width: 100%;
  height: 1rpx;
  border-radius: 3px 3px 3px 3px;
  opacity: 1;
  border-top: 1px solid #D7D7D7;
  margin-bottom: 19px;
}

.clear-icon {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: 0;
  top: 5px;
  z-index: 999;
}

.form-group-switch {
  margin-bottom: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-label {
  font-size: 15px;
  font-weight: 400;
  color: rgba(57, 57, 70, 0.9);
}